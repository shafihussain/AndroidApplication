<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.midterm.lasalle.project_android.Controller.DaycareController.ModifyDaycareSchedule">

    <TextView
        android:id="@+id/txtViewTitle"
        style="@style/Main"
        android:textAllCaps="true"
        android:textColor="#ff1111"
        android:textSize="12.5sp"
        android:textStyle="bold"
        android:text="Modify Meal And Color"
        android:paddingTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/editTextMeal"
        app:layout_constraintRight_toLeftOf="@id/editTextMeal"
        />

    <TextView
        android:id="@+id/txtViewMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Meal : "
        android:textSize="14sp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="30dp"
        />
    <EditText
        android:id="@+id/editTextMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@id/txtViewMeal"
        app:layout_constraintBaseline_toBaselineOf="@id/txtViewMeal"
        android:layout_marginLeft="30dp" />
    <TextView
        android:id="@+id/txtViewColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Background Color : "
        android:textSize="14sp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="30dp"

        />

    <CheckBox
        android:id="@+id/chkBoxRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txtViewColor"
        app:layout_constraintBaseline_toBaselineOf="@id/txtViewColor"
        android:layout_marginLeft="20dp"
        android:text="Red" />

    <CheckBox
        android:id="@+id/chkBoxYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/chkBoxRed"
        app:layout_constraintBaseline_toBaselineOf="@id/txtViewColor"
        android:layout_marginLeft="40dp"
        android:text="Green" />

    <CheckBox
        android:id="@+id/chkBoxBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txtViewColor"
        app:layout_constraintTop_toBottomOf="@id/txtViewColor"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Yellow" />

    <CheckBox
        android:id="@+id/chkBoxGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/chkBoxBlue"
        app:layout_constraintTop_toBottomOf="@id/txtViewColor"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Blue" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="50dp"
        style="@style/BtnPages"
        />
</android.support.constraint.ConstraintLayout>
